            box-shadow: 0 20px 45px rgba(0,0,0,0.4); 
            display: flex; flex-direction: column; 
            justify-content: space-around; padding: 40px 20px; 
            box-sizing: border-box; position: relative; z-index: 10; 
            backdrop-filter: blur(10px);
        }

