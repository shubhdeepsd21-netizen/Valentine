<body onpointerdown="unlockAudio()">

    <div class="outside-header">Forever Starts Today... ‚ù§Ô∏è</div>

    <div class="card" id="mainCard">
        <p class="gf-name">My Dearest Shona Bubbu,</p> 
        <h1 class="question" id="qText">Every heartbeat brings me closer to you. Will you be my Valentine?</h1>
        <div class="btn-container">
            <button id="yesBtn" onclick="sayYes()">Yes</button>
            <button id="noBtn" onclick="moveNo()">No</button>
        </div>
    </div>

<script>
    let noCount = 0;
    let audioReady = false;

    const sadSfx = new Audio("https://actions.google.com/sounds/v1/cartoon/cartoon_boing.ogg");
    const sweetSfx = new Audio("https://actions.google.com/sounds/v1/cartoon/clink_and_chime.ogg");

    function unlockAudio() {
        if (!audioReady) {
            sadSfx.play().then(() => { sadSfx.pause(); sadSfx.currentTime = 0; }).catch(() => {});
            sweetSfx.play().then(() => { sweetSfx.pause(); sweetSfx.currentTime = 0; }).catch(() => {});
            audioReady = true;
        }
    }

    // A mix of naughty, witty, and playfully sad
    const sarcasms = [
        "Is that a 'No' or are you just teasing me? üòè",
        "Stop playing hard to get! My heart can't take it. ü•∫",
        "You're being a little bratty today, aren't you? üòà",
        "Clicking that button doesn't count as exercise! üèÉ‚Äç‚ôÄÔ∏è",
        "Ouch! That 'No' hurt more than a spanking. üò≥",
        "Are you punishing me for being too cute? üòá",
        "Don't make me come over there and click 'Yes' for you. üî•",
        "One 'Yes' and I'll be on my best behavior... maybe. üòâ",
        "Legend says she's still trying to resist me... üíñ"
    ];

    function moveNo() {
        noCount++;
        document.getElementById('qText').innerText = sarcasms[noCount % sarcasms.length];
        
        if (audioReady) {
            sadSfx.currentTime = 0;
            sadSfx.play().catch(() => {});
        }

        const noBtn = document.getElementById('noBtn');
        const qElem = document.getElementById('qText');
        const qRect = qElem.getBoundingClientRect();
        
        noBtn.style.position = 'fixed';

        const centerX = qRect.left + qRect.width / 2;
        const centerY = qRect.top + qRect.height / 2;
        
        // Locked tight radius (80-120px)
        const angle = Math.random() * Math.PI * 2;
        const radius = 80 + Math.random() * 40; 

        let newX = centerX + radius * Math.cos(angle) - (noBtn.offsetWidth / 2);
        let newY = centerY + radius * Math.sin(angle) - (noBtn.offsetHeight / 2);

        // Clamping to screen edges
        newX = Math.max(15, Math.min(newX, window.innerWidth - noBtn.offsetWidth - 15));
        newY = Math.max(15, Math.min(newY, window.innerHeight - noBtn.offsetHeight - 15));

        noBtn.style.left = `${newX}px`;
        noBtn.style.top = `${newY}px`;
    }

    function sayYes() {
        if (audioReady) {
            sweetSfx.currentTime = 0;
            sweetSfx.play().catch(() => {});
        }
        confetti({ particleCount: 200, spread: 90, origin: { y: 0.6 } });
        
        const myNumber = "9760030420"; 
        const msg = `YES! ‚ù§Ô∏è My heart tried to say 'No' ${noCount} times, but love won! üòÇ`;
        const waUrl = `https://api.whatsapp.com/send?phone=${myNumber}&text=${encodeURIComponent(msg)}`;

        document.getElementById('mainCard').innerHTML = `
            <div style="font-size: 70px; margin-bottom: 20px;">üíë</div>
            <h1 style="margin: 0; font-family: 'Dancing Script', cursive; font-size: 32px;">Finally!</h1>
            <p style="color: #444; font-size: 16px; margin: 15px 0;">I knew you'd give in eventually. üòâ</p>
            <a href="${waUrl}" class="wa-send-btn">Send My 'Yes' üì≤</a>
        `;
        if(document.getElementById('noBtn')) document.getElementById('noBtn').remove();
    }
</script>
</body>
</html>
